#include<stdio.h>
#include<stdlib.h>

#define length 170
#define breadth 46
#define digit_start 48
#define digit_end 57
#define char_start 32
#define char_end 127

void main()
{
 int row[length],rain[length],count=0,set[length],speed[length],start_point[length],loop,start,end,choice,tail_in,tail[length],erase[length],erase_last_line[length],colour;
 char fill_screen,trail;

 while(1)
 {
	printf("digit rain(1) or character rain(2) : ");
	scanf("%d",&choice);
	if(choice==1 || choice==2)
		break;
	printf("invalid choice\n");
 }

 while(1)
 {
	printf("Fill the screen?\n(y->yes or n->no) : ");
	scanf(" %c",&fill_screen);
	if(fill_screen=='y' || fill_screen=='n')
		break;
	printf("invalid choice\n");
 }

 if(fill_screen=='n')
 {
	while(1)
 	{
        	printf("enter the tail length : ");
	        scanf("%d",&tail_in);
	        if(tail_in<45)
        	        break;
	        printf("tail length too high\n");
	}
	while(1)
	{
		printf("colour :\n");
		printf("0->mixed\t");
		for(loop=1;loop<41;loop++)
			printf("%d->\x1b[%dmhi\x1b[0m\t",loop,loop);
		printf("\n");
		scanf(" %d",&colour);
		if(colour>40&&colour==0)
			break;
		printf("invalid choice\n");
	}
 }

 if(choice==1)
 {
	start=digit_start;
	end=digit_end;
 }
 else
 {
	start=char_start;
	end=char_end;
 }

 for(loop=0;loop<length;loop++)
 {
	row[loop]=1;
	rain[loop]=start;
	set[loop]=0;
	if(fill_screen=='y')
	{
		speed[loop]=rand()%8;
		while(speed[loop]<5)
			speed[loop]=rand()%8;
		tail[loop]=rand()%30;
		while(tail[loop]<20)
			tail[loop]=rand()%30;
		erase[loop]=breadth-tail[loop];
		erase_last_line[loop]=0;
	}
	else
	{
		speed[loop]=rand()%100;
		while(speed[loop]<25)
			speed[loop]+=25;
		erase[loop]=breadth-tail_in;
		erase_last_line[loop]=1;
	}
	start_point[loop]=rand()%10;
 }
 set[1]=1;

 system("clear");
 while(1)
 {
	for(loop=0;loop<length;loop++)
	{
		if(set[loop])
		{
			if(fill_screen=='n')
			{
				if(!colour)
				{
					if(!(loop%3))
						printf("\x1b[31m");
					else if(!(loop%4))
						printf("\x1b[33m");
					else if(!(loop%5))
						printf("\x1b[35m");
					else if(!(loop%7))
						printf("\x1b[30m");
					else if(!(loop%11))
						printf("\x1b[1m");
					else if(!(loop%13))
						printf("\x1b[3m");
				}
				else if(colour=='r')
					printf("\x1b[31m");
			}
			else printf("\x1b

			printf("\033[%d;%dH%c",row[loop],loop+1,rain[loop]++);
			if(!(count%(speed[loop])))
			{
				if(count>20000)
					count=0;
				if(fill_screen=='y')
				{
					trail=rain[loop]-1;
					printf("\x1b[30m");
					if(row[loop]>tail[loop])
						erase_last_line[loop]=1;
				}
				else trail=' ';
				if(erase_last_line[loop]==1)
					printf("\033[%d;%dH%c",erase[loop],loop+1,trail);

				if(++erase[loop]==breadth)
					erase[loop]=1;
				if(++row[loop]==breadth)
					row[loop]=1;
			}
			if(rain[loop]==end)
				rain[loop]=start;
		}
		if(loop+1==1)
			continue;
		else if(row[1]>start_point[loop])
			set[loop]=1;
		printf("\x1b[0m");
	}
	count++;
 }
}
